{
  "compilerOptions": {
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "target": "es6",
    "paths": {
      "@/components/*": ["./components/*"],
      "@/components": ["./components"],
      "@/pages/*": ["./pages/*"],
      "@/public/*": ["public/*"],
      "@/data/*": ["./data/*"],
      "@/data": ["./data"],
      "@/store/*": ["./store/*"],
      "@/store": ["./store"],
    }
  },
  "exclude": [
    "node_modules",
    ".git",
    ".next"
  ]
}
